<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">

<h1 style="margin:8vw;">New Game</h1>
<div class="d-flex justify-content-center align-items-baseline">
<p><% @letters.each do |letter|  %>
  <div style="padding:10px; font-size:20px;"><%= letter %> </div>
  <% end %>
</p>
  <form action="/score" method="post">
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <%= hidden_field_tag :letters, @letters %>
    <br>
    <input style="margin:2vw;" type="text"  name="word" >
    <input type="submit" value="submit a word" class="btn-primary">
  </form>
</div>
